@using MVC.Domain;
@model MVC.ViewModels.DireccionsViewModel

@Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
    $(function () {
        $('.datetextbox').datepicker({dateFormat: 'm/d/yy'});
    });
</script>

@using (Html.BeginForm(@Model.ViewActionName, @Model.ViewControllerName, new { model = this.Model, returnUrl = @Model.ViewReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div>
        <fieldset>
            <legend></legend>
            <table>
                @if (Model.Operation == CrudOperation.Update)
                {
                    <tr>
                        <td class="editor-label">@Html.LabelFor(vm => vm.DireccionsModel.DireccionId):</td>
                        <td></td>
                        <td class="editor-field">@Html.TextBoxFor(vm => vm.DireccionsModel.DireccionId, new { @readonly = "readonly" })</td>
                        <td></td>
                    </tr>
                }

                <tr>
                    <td class="editor-label">@Html.LabelFor(vm => vm.DireccionsModel.Calle1):</td>
                    <td></td>
                    <td class="editor-field">@Html.EditorFor(vm => vm.DireccionsModel.Calle1)</td>
                    <td class="editor-field">@Html.ValidationMessageFor(vm => vm.DireccionsModel.Calle1)</td>
                </tr>
                <tr>
                    <td class="editor-label">@Html.LabelFor(vm => vm.DireccionsModel.Calle2):</td>
                    <td></td>
                    <td class="editor-field">@Html.EditorFor(vm => vm.DireccionsModel.Calle2)</td>
                    <td class="editor-field">@Html.ValidationMessageFor(vm => vm.DireccionsModel.Calle2)</td>
                </tr>
                <tr>
                    <td class="editor-label">@Html.LabelFor(vm => vm.DireccionsModel.NumeroCasa):</td>
                    <td></td>
                    <td class="editor-field">@Html.EditorFor(vm => vm.DireccionsModel.NumeroCasa)</td>
                    <td class="editor-field">@Html.ValidationMessageFor(vm => vm.DireccionsModel.NumeroCasa)</td>
                </tr>
                <tr>
                    <td class="editor-label">@Html.LabelFor(vm => vm.DireccionsModel.Canton):</td>
                    <td></td>
                    <td class="editor-field">@Html.EditorFor(vm => vm.DireccionsModel.Canton)</td>
                    <td class="editor-field">@Html.ValidationMessageFor(vm => vm.DireccionsModel.Canton)</td>
                </tr>
                <tr>
                    <td class="editor-label">@Html.LabelFor(vm => vm.DireccionsModel.Provincia):</td>
                    <td></td>
                    <td class="editor-field">@Html.EditorFor(vm => vm.DireccionsModel.Provincia)</td>
                    <td class="editor-field">@Html.ValidationMessageFor(vm => vm.DireccionsModel.Provincia)</td>
                </tr>
                <tr>
                    <td class="editor-label">@Html.LabelFor(vm => vm.DireccionsModel.Principal):</td>
                    <td>&nbsp;<span style="color: red;">*</span></td>
                    <td class="editor-field">@Html.CheckBoxFor(vm => vm.DireccionsModel.Principal)</td>
                    <td class="editor-field">@Html.ValidationMessageFor(vm => vm.DireccionsModel.Principal)</td>
                </tr>
                <tr>
                    <td class="editor-label">@Html.LabelFor(vm => vm.DireccionsModel.ClienteClienteid):</td>
                    <td></td>
                    <td class="editor-field">@Html.DropDownListFor(vm => vm.DireccionsModel.ClienteClienteid, new SelectList(Model.ClientesDropDownListData, "ClienteId", "Nombre"), "Select One")</td>
                    <td class="editor-field">@Html.ValidationMessageFor(vm => vm.DireccionsModel.ClienteClienteid)</td>
                </tr>
                <tr>
                    <td colspan="2"></td>
                    <td colspan="2">
                        <br />
                        @if (Model.Operation == CrudOperation.Add)
                        {
                            <input type="submit" value="Guardar" class="button-150" />
                        }
                        else
                        {
                            <input type="submit" value="Actualizar" class="button-150" />
                        }

                        @if (Request.UrlReferrer != null)
                        {
                            <input type="button" value="Cancelar" onclick="window.location = '@Request.UrlReferrer.ToString()'; return false;" class="button-100" />
                        }
                        else
                        {
                            <input type="button" value="Cancel" onclick="window.location = '@Url.Action("Index", "Home")'; return false;" class="button-100" />
                        }
                    </td>
                </tr>
            </table>
        </fieldset>
    </div>
}
